{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/gcha0035/FIT3179HW-week10/refs/heads/main/Wineproduction_June2024.csv",
        "format": {
            "type": "csv"
        }
    },
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Geographical Indication",
                    "type": "ordinal",
                    "axis": {
                        "title": "Region"
                    }
                },
                "y": {
                    "field": "Volume",
                    "type": "quantitative",
                    "axis": {
                        "title": "Production Volume (L)"
                    }
                },
                "color": {
                    "field": "category",  // Assuming there's a 'category' field for color encoding
                    "type": "nominal"
                }
            }
        },
        {
            "mark": {
                "type": "line",
                "point": true // Show points on the line
            },
            "encoding": {
                "x": {
                    "field": "Geographical Indication",
                    "type": "ordinal"
                },
                "y": {
                    "field": "Volume % change on previous period",
                    "type": "quantitative",
                    "axis": {
                        "title": "Volume % Change"
                    }
                },
                "color": {
                    "field": "category", // Assuming there's a 'category' field for color encoding
                    "type": "nominal"
                }
            }
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    }
}
